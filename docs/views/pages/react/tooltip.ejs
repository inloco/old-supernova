<% layout('./../../layout') -%>

<% include _react_menu %>

<header class="sn-layout__header sn-presentation-header">
  <div aria-expanded="false" role="button" tabindex="0" class="sn-layout__drawer-button">
    <i class="material-icons">î—’</i>
  </div>
  <div class="sn-layout__header-row">
    <span class="sn-layout-title">Tooltip</span>
  </div>
</header>

<main class="sn-layout__content sn-presentation-layout__content">
  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-all">
    <div class="sn-cell--1">
      <h3>Example</h3>
      <div id="tooltip-component"></div>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <pre class="sn-presentation-pre-panel">
&lt;Tooltip message=&quot;Some info message&quot;&gt;
  Exemplo de tooltip
&lt;/Tooltip&gt;
      </pre>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <h4>Tooltip</h4>
      <table class="sn-presentation-table">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
            <th>Required</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>position</td>
            <td>string</td>
            <td>top</td>
            <td>
              Tooltip position. Can be
              <b>
                top, bottom, right, left, top-left, top-right, bottom-left, bottom-right
              </b>
            </td>
            <td>No</td>
          </tr>
          <tr>
            <td>message</td>
            <td>string</td>
            <td>null</td>
            <td>Tooltip message</td>
            <td>Yes</td>
          </tr>
          <tr>
            <td>children</td>
            <td>node</td>
            <td>null</td>
            <td>Wrapped content</td>
            <td>Yes</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</main>

<% script('/tooltip.js', 'text/babel') -%>