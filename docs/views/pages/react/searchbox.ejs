<% layout('./../../layout') -%>

<% include _react_menu %>

<header class="sn-layout__header sn-presentation-header">
  <div aria-expanded="false" role="button" tabindex="0" class="sn-layout__drawer-button">
    <i class="material-icons">î—’</i>
  </div>
  <div class="sn-layout__title-group">
    <div class="sn-layout__title-wrap">
      <span class="sn-layout__title">React</span>
    </div>  
    <div class="sn-layout__title-wrap">
      <span class="sn-layout__title">Search Box</span>
    </div>
  </div>
</header>

<main class="sn-layout__content sn-presentation-layout__content">
  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-all">
    <div class="sn-cell--1">
      <h3>Example</h3>
      <div id="searchbox-component"></div>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <pre class="sn-presentation-pre-panel">
&lt;SearchBox
  label=&quot;Busque aqui&quot;
  helpMessage=&quot;Texto de ajuda ou informa&ccedil;&atilde;o&quot;
  typeMessage=&quot;info&quot;
/&gt;
      </pre>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <h4>SearchBox</h4>
      <table class="sn-presentation-table">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
            <th>Required</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>label</td>
            <td>string</td>
            <td>null</td>
            <td>Input placeholder</td>
            <td>Yes</td>
          </tr>
          <tr>
            <td>helpMessage</td>
            <td>string</td>
            <td>null</td>
            <td>Help message</td>
            <td>No</td>
          </tr>
          <tr>
            <td>typeMessage</td>
            <td>string</td>
            <td>null</td>
            <td>The type of message. Values: [<b>info, danger, warning, success</b>]</td>
            <td>No</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</main>

<% script('/searchbox.js', 'text/babel') -%>