<% layout('./../../layout') -%>

<div id="alert-component"></div>

<% include _react_menu %>

<header class="sn-layout__header">
  <div aria-expanded="false" role="button" tabindex="0" class="sn-layout__drawer-button">
    <i class="material-icons">î—’</i>
  </div>
  <div class="sn-layout__header-row">
    <span class="sn-layout-title">Alerts</span>
  </div>
</header>

<main class="sn-layout__content sn-presentation-layout__content">
  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-top">
    <div class="sn-cell--1">
      <h3>Example</h3>
      <p>To see the example again please reload the page.</p>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <pre class="sn-presentation-pre-panel">
&lt;Steps&gt;
  &lt;StepsItem label=&quot;Informa&ccedil;&otilde;es Gerais&quot; index={1} done={true}/&gt;
  &lt;StepsItem label=&quot;Endere&ccedil;o&quot; index={2} active={true}/&gt;
  &lt;StepsItem label=&quot;Confirma&ccedil;&atilde;o&quot; index={3} /&gt;
  &lt;StepsItem label=&quot;Pagamento&quot; index={4} /&gt;
&lt;/Steps&gt;
      </pre>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed sn-grid--bleed-bottom">
    <div class="sn-cell--1">
      <h4>Steps</h4>
      <table class="sn-presentation-table">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
            <th>Required</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>children</td>
            <td>node</td>
            <td>null</td>
            <td>Node with StepItems</td>
            <td>Yes</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed">
    <div class="sn-cell--1">
      <h4>StepsItem</h4>
      <table class="sn-presentation-table">
        <thead>
          <tr>
            <th>Attribute</th>
            <th>Type</th>
            <th>Default</th>
            <th>Description</th>
            <th>Required</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>label</td>
            <td>string</td>
            <td>null</td>
            <td>Step label</td>
            <td>Yes</td>
          </tr>
          <tr>
            <td>index</td>
            <td>number</td>
            <td>null</td>
            <td>The key of item</td>
            <td>Yes</td>
          </tr>
          <tr>
            <td>done</td>
            <td>bool</td>
            <td>false</td>
            <td>The item is done?</td>
            <td>No</td>
          </tr>
          <tr>
            <td>active</td>
            <td>bool</td>
            <td>false</td>
            <td>The item is active(current)?</td>
            <td>No</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="sn-grid sn-grid--horizontal sn-grid--bleed-bottom"></div>
</main>

<% script('/alerts.js', 'text/babel') -%>